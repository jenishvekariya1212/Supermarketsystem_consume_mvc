@using System.Data;
@model IEnumerable<Supermarketsystem.Areas.Admin.Models.CategoryModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <div class="app-title">
        <div>
            <h1><i class="fa fa-th-list"></i> Category Table</h1>
            <p>Table to display analytical data effectively</p>
        </div>
        <ul class="app-breadcrumb breadcrumb side">
            <li class="breadcrumb-item"><i class="fa fa-home fa-lg"></i></li>
            <li class="breadcrumb-item">Tables</li>
            <li class="breadcrumb-item active"><a href="#">Data Table</a></li>
        </ul>
    </div>

            

                
@if (@TempData["Message"] != null)
{
    <script>
        alert('@TempData["Message"]');
    </script>
}



        
    

    <div class="row">
   
        <div class="col-md-12"> 
            <div class="tile">
            <div class="tile-body">
                <p>
                    <a class="btn btn-sm btn btn-primary" asp-controller="Category" asp-action="Edit">Add</a>
                    
                 
                </p>
                <span style="float: right;"><a asp-controller="Category" asp-action="Export"><i class="fa fa-file-pdf-o" style="font-size:30px;color:red"></i></a></span>
               
                    <table class="table table-hover table-bordered" id="sampleTable">
                        <thead>
                            <tr>
                                <th>CategoryID</th>
                                <th>CategoryName</th>
                                <th>CategoryDescription</th>
                                <th>Edit</th>
                                <th>Delete</th>
                               
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in Model){
                            <tr>
                                <td>@item.CategoryID</td>
                                <td>@item.CategoryName</td>
                                <td>@item.CategoryDescription</td>
                                <td>
                                    <a href ="@Url.Action("Edit","Category", new {CategoryID = item.CategoryID}) " class="btn btn-primary" type="button">edit</a>
                                   
                                </td>
                                <td>
                                    <a href="@Url.Action("Delete","Category", new {CategoryID = item.CategoryID}) " class="btn btn-danger" type="button">delete</a>
                                 
                                </td>
                            </tr>
                            }
                           
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>




