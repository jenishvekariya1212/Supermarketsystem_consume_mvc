@using System.Data;
@model Supermarketsystem.Areas.Login.Models.Registraion

@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<section class="material-half-bg">
    <div class="cover"></div>
</section>

    <div class="logo">
        <h1>Delta</h1>
    </div>
    <div class="login-box" style="height:90vh">
        <form class="login-form" asp-area="Login" asp-controller="Registration" asp-action="Save"> 
            <div>
             @Html.HiddenFor(model=>model.UserID)
            </div>
            <h3 class="login-head"><i class="fa fa-lg fa-fw fa-user"></i>SIGN UP</h3>
        <div class="form-group">
            <label class="control-label" asp-for="FirstName">FirstName</label>
            <input class="form-control"  type="text" asp-for="FirstName" placeholder="Email" autofocus>
        </div>
        <div class="form-group">
            <label class="control-label" asp-for="LastName">LastName</label>
            <input class="form-control" type="text" asp-for="LastName" placeholder="Email" autofocus>
        </div>
        <div class="form-group">
            <label class="control-label" asp-for="UserName">USERNAME</label>
            <input class="form-control" type="text" asp-for="UserName" placeholder="Email" autofocus>
        </div>
           
            <div class="form-group">
                <label class="control-label" asp-for="Password">PASSWORD</label>
                <input class="form-control" type="password" asp-for="Password" placeholder="Password">
        </div> 
        <div class="form-group">
            <label class="control-label" asp-for="Email">Email</label>
            <input class="form-control" type="text"  asp-for="Email" placeholder="Email" autofocus>
        </div>
       
            <div class="form-group">
                <div class="utility">
                    <div class="animated-checkbox">
                        <label asp-for="ISActive">
                            <input type="checkbox" asp-for="ISActive"><span class="label-text">IS Admin</span>
                        </label>
                    </div>
                    <p class="semibold-text mb-2"><a href="#" >Forgot Password ?</a></p>
                </div>
            </div>
            <div>
           
            </div>
            <div class="form-group btn-container">
                <button class="btn btn-primary btn-block"><i class="fa fa-sign-in fa-lg fa-fw"></i>SIGN up</button>
            </div>
        </form>
